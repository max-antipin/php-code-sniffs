{
    "name": "max-antipin/php-code-sniffs",
    "description": "Coding Standard for PHP_CodeSniffer by Max Antipin provides sniffs with additional checks.",
    "type": "phpcodesniffer-standard",
    "keywords": [
        "phpcs",
        "dev",
        "standards",
        "static analysis"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Maxim Antipin",
            "email": "max.v.antipin@gmail.com",
            "homepage": "https://github.com/max-antipin",
            "role": "Developer"
        }
    ],
    "license": "Unlicense",
    "require": {
        "php": ">=8.2",
        "squizlabs/php_codesniffer": "^3",
        "dealerdirect/phpcodesniffer-composer-installer": "^1"
    },
    "require-dev": {
        "phpstan/phpstan": "^2",
        "phpcsstandards/phpcsdevtools": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "MaxAntipin\\PHPCS\\Standards\\AntipinCS\\Sniffs\\": "AntipinCS/Sniffs/"
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PHP_CodeSniffer\\": "vendor/squizlabs/php_codesniffer/src/",
            "PHP_CodeSniffer\\Tests\\": "vendor/squizlabs/php_codesniffer/tests/"
        }
    },
    "scripts": {
        "cs": "@php ./vendor/bin/phpcs --ignore=vendor/,var/,*.inc",
        "test:sniffs": "@php ./vendor/bin/phpcs-check-feature-completeness",
        "test:psr12": "@cs --standard=PSR12",
        "test:AntipinCS": "@cs --standard=AntipinCS",
        "fix-psr12": "@php ./vendor/bin/phpcbf --standard=PSR12 --ignore=vendor/,var/,*.inc"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
